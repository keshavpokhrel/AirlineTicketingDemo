<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Airline_Ticketing" verbose="1"><!--  parallel="tests" thread-count="4" -->

	<test name="Airline Shorted Route">
		<parameter name="origin" value="MI" />
		<parameter name="destination" value="CA" />
		<classes>
			<class name="com.airlineticketing.test.VerifyFlightDetails">
				<methods>
					<include name="pickShortestRoute" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Airline Shorted And Chepest Route">
		<parameter name="origin" value="MI" />
		<parameter name="destination" value="CA" />
		<classes>
			<class name="com.airlineticketing.test.VerifyFlightDetails">
				<methods>
					<include name="pickShortestThenChepestRoute" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="Add Extra Baggage">
		<parameter name="origin" value="MI" />
		<parameter name="destination" value="CA" />
		<parameter name="baggagesize" value="20" />
		<classes>
			<class name="com.airlineticketing.test.VerifyFlightDetails">
				<methods>
					<include name="pickShortestThenChepestRoute" /> <!-- check baggage for specific flight return by current method.  -->
					<include name="addExtraBaggageToFilght" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Apply Promo Code">
		<parameter name="origin" value="MI" />
		<parameter name="destination" value="CA" />
		<parameter name="promocode" value="10" />
		<classes>
			<class name="com.airlineticketing.test.VerifyFlightDetails">
				<methods>
					<include name="applyPromoCode" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Check Frequent Flyer For Special Lounge ">
		<parameter name="origin" value="MI" />
		<parameter name="destination" value="CA" />
		<parameter name="travlerid" value="6666" />
		<classes>
			<class name="com.airlineticketing.test.VerifyFlightDetails">
				<methods>
					<include name="checkFrequentFlyerTraveler" />
				</methods>
			</class>
		</classes>
	</test>

</suite>